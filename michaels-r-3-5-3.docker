FROM opus-pro-base:master-prod-2019_3_27_15_32_34

RUN rm /etc/apt/sources.list

ADD sources.list /etc/apt/

RUN apt-get update && apt-get -y --allow-unauthenticated install r-base-dev vim rsync

RUN Rscript -e "install.packages(c('R6', 'FastGP', 'mcmc', 'Rcpp', 'MASS'), repos='http://cran.cnr.berkeley.edu')"
       

ADD .ssh /root/.ssh

RUN mkdir /EachData1

ADD RUN_ATO.sh /

ADD RUN_AMBULANCES.sh /

ADD ./* /
